{% extends 'base.html.twig' %}

{% block title %}autos{% endblock %}

{% block body %}

<h1>Liste des voitures</h1>
<div class="text-end"><a href="{{ path('app_add') }}" class="btn btn-success" ><i class="fas fa-plus"></i>Ajouter</a>
</div>

<div class="col-4 offset-8 ">
    {{ form_start(form_search) }}
        {{ form_widget(form_search) }}  

            <button type="submit" class="btn btn-secondary "><i class="fas fa-search"></i></button>
    {{ form-end(form_search) }}
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Marque</th>
            <th>Modele</th>
            <th>Pays</th>
            <th>Prix</th>
            <th>Categorie</th>
            <th>Image</th>
            <th>Description</th>
            <th colspan="2">Actions</th>

        </tr>
    </thead>
    <tbody>
        {% for car in tabCars %}
        <tr>
            <td>{{ car.id }}</td>
            <td>{{ car.marque }}</td>
            <td>{{ car.modele }}</td>
            <td>{{ car.pays }}</td>
            <td>{{ car.prix }}â‚¬</td>
            <td>{{ car.categorie.nom }}</td>
            <td><img src="{{ asset('images/' ~ car.image)}}" alt="" width="100"/></td>            
            <td>{{ car.Description }}</td>
            <td><a class="btn btn-warning" href="{{path('app_edit', {id: car.id}) }}"><i class="fas fa-edit"></i> Edit</a></td>                 
            <td><a class="btn btn-danger" onclick="return confirm('Etes vous sur de vouloir suprimer pas')" href="{{path('app_delete', {id: car.id}) }}"><i class="fas fa-trash"></i> Supprimer</a></td>        
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
